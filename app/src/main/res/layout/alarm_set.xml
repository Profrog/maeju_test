<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F9F9F6"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/set_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <ImageButton
            android:id="@+id/pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#F9F9F6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="65dp"
            >

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="38dp"
                android:background="@drawable/rect"

                android:visibility="visible" />

            <TextView
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="앱 설정"
                android:layout_marginLeft="4dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/set_text"
            app:layout_constraintLeft_toLeftOf="@id/set_text"
            android:layout_marginTop="82dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="50dp"
            android:id="@+id/attend"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:text="출석 알람"
                android:textSize="20dp"
                android:textColor="#000000"
                android:id="@+id/attend_text"
                />
            <View
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/btn_attend"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:backgroundTint="#A2C97F"
                android:textSize="11dp"
                app:cornerRadius="0dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="ON" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/attend"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="50dp"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#66000000"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:id="@+id/quiz"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="50dp"
            app:layout_constraintTop_toBottomOf="@id/attend"
            app:layout_constraintLeft_toLeftOf="@id/attend"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:text="퀴즈 알람"
                android:textSize="20dp"
                android:textColor="#000000"
                android:id="@+id/quiz_text"
                />
            <View
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/btn_quiz"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:backgroundTint="#A2C97F"
                android:textSize="11dp"
                app:cornerRadius="0dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="ON" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/quiz"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="70dp"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#66000000"
                android:layout_weight="1"/>
        </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>