<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_a">


    <TextView
        android:id="@+id/maeju"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1dp"
        android:gravity="top"
        android:text="MAEJU"
        android:textAppearance="@style/maeju" />

    <TextView
        android:id="@+id/some_id0"
        android:layout_below="@+id/maeju"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:gravity="top"
        android:text="내 정보"
        android:textAppearance="@style/some_id" />


    <View
        android:id="@+id/profile_image"
        android:layout_below="@+id/some_id0"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/ipp" />

    <TextView
        android:id="@+id/name"
        android:textColor="@android:color/black"
        android:onClick="goprofile"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="name"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/email"
        android:textColor="@android:color/black"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:gravity= "center"
        android:text="email" />

    <View
        android:id="@+id/line_1"
        android:layout_below="@+id/email"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/line_1" />

    <TextView
        android:id="@+id/some_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="52dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:text="총 과제 포인트"
        android:textAppearance="@style/some_id"
        android:gravity="top"
        />


    <TextView
        android:id="@+id/mainpoint"
        android:textColor="@android:color/black"
        android:layout_below="@+id/line_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:text="main_point"
        android:textSize="30dp" />


    <View
        android:id="@+id/line_2"
        android:layout_toRightOf = "@+id/mainpoint"
        android:layout_width="20dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="195dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="170dp"
        android:background="@drawable/line_2"
        />

    <TextView
        android:id="@+id/some_id12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="252dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:text="총 퀴즈 포인트"
        android:textAppearance="@style/some_id"
        android:gravity="top"
        />

    <TextView
        android:id="@+id/quizpoint"
        android:textColor="@android:color/black"
        android:layout_below="@+id/some_id12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf = "@+id/line_2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="230dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="225dp"
        android:text="quiz_point"
        android:textSize="30dp" />


    <View
        android:id="@+id/line_2"
        android:layout_below="@+id/mainpoint"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/line_1" />



    <Button
        android:id="@+id/buttonGuide"
        android:backgroundTint= "@color/white_a"
        android:textColor="@android:color/black"
        android:layout_below="@+id/line_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="guide"
        android:text="공지사항" />


    <View
        android:id="@+id/line_3"
        android:layout_below="@+id/buttonGuide"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/line_1" />



    <Button
        android:id="@+id/btn_set"
        android:backgroundTint= "@color/white_a"
        android:textColor="@android:color/black"
        android:layout_below="@+id/line_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="set"
        android:text="앱 설정" />

    <View
        android:id="@+id/line_4"
        android:layout_below="@+id/btn_set"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/line_1" />


    <Button
        android:id="@+id/buttonRefresh"
        android:backgroundTint= "@color/white_a"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_4"
        android:layout_gravity="center_horizontal"
        android:onClick="refresh"
        android:text="새로고침" />

    <View
        android:id="@+id/line_5"
        android:layout_below="@+id/buttonRefresh"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/line_1" />


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_5"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/dark_green"
        android:text="출석하기"
        android:textColor="@android:color/black" />


</RelativeLayout>