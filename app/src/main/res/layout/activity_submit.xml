<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f6">

    <View
        android:id="@+id/green_bar_1"
        android:layout_width="71dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:background="@drawable/green_bar"
        app:layout_constraintBottom_toTopOf="@+id/sp_week"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.446" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="주차 선택"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/sp_week"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.34" />

    <Spinner
        android:id="@+id/sp_week"
        android:layout_width="280dp"
        android:layout_height="69dp"
        android:background="@drawable/spinner_background"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <View
        android:id="@+id/green_bar_2"
        android:layout_width="71dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="32dp"
        android:layout_weight="1"
        android:background="@drawable/green_bar"
        app:layout_constraintBottom_toTopOf="@+id/dotted_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="72dp"
        android:layout_height="25dp"
        android:layout_marginBottom="32dp"
        android:layout_weight="1"
        android:fontFamily="@font/roboto"
        android:text="사진 선택"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/dotted_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_week"
        app:layout_constraintVertical_bias="1.0" />


    <ImageView
        android:id="@+id/dotted_box"
        android:layout_width="313dp"
        android:layout_height="282dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_weight="5"
        android:background="@drawable/ic_dotted_line_box"
        app:layout_constraintBottom_toTopOf="@+id/btn_submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_week"
        app:layout_constraintVertical_bias="0.748"></ImageView>

    <Button
        android:id="@+id/btn_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp_week"
        android:layout_centerHorizontal="true"
        android:background="@drawable/upload_btn"
        android:fontFamily="@font/roboto"
        android:text="이미지 업로드"
        android:textColor="#000000"
        android:textSize="18sp"
        app:backgroundTint="#C4C4C4"
        app:layout_constraintBottom_toBottomOf="@+id/dotted_box"
        app:layout_constraintEnd_toEndOf="@+id/dotted_box"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/dotted_box"
        app:layout_constraintTop_toBottomOf="@+id/iv_uphoto"
        app:layout_constraintVertical_bias="0.485"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/iv_uphoto"
        android:layout_width="243dp"
        android:layout_height="152dp"
        android:layout_below="@+id/btn_image"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="@+id/dotted_box"
        app:layout_constraintEnd_toEndOf="@+id/dotted_box"
        app:layout_constraintStart_toStartOf="@+id/dotted_box"
        app:layout_constraintTop_toTopOf="@+id/dotted_box"
        app:layout_constraintVertical_bias="0.192"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btn_submit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="295dp"
        android:layout_height="67dp"
        android:layout_below="@+id/iv_uphoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="36dp"
        android:background="@drawable/submit_btn"
        android:fontFamily="@font/roboto"
        android:text="@string/제출하기"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#000000"
        android:textSize="18sp"
        app:backgroundTint="#61863F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

</androidx.constraintlayout.widget.ConstraintLayout>